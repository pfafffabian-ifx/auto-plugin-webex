{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"lib": ["ES2018"],
		"types": ["jest"],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"importHelpers": true,
		"composite": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
